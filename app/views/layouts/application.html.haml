!!!
%html
  %head
    %title SocialHub
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .topbar
      .fill
        .container
          %h3 
            %a{ :href => '/' } SocialHub
          = render 'shared/topbar'
    #wrapper
      #sidebar.span4.columns
        %p Sidebar goes here
      #content.span12.columns
        - if notice
          .alert-message.notice
            %a.close
            = notice
        -if alert
          .alert-message.notice
            %a.close
            .alert= alert
        = yield


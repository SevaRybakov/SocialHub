!!!
%html
  %head
    %title SocialHub
    = stylesheet_link_tag 'formtastic', 'formtastic_changes'
    /[if IE 6] <haml:loud> stylesheet_link_tag 'formtastic_ie6' </haml:loud>
    /[if IE 7] <haml:loud> stylesheet_link_tag 'formtastic_ie7' </haml:loud>
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .topbar
      .fill
        .container
          %h3 
            %a{ :href => '/' } SocialHub
          = render 'shared/topbar'
    #wrapper
      #sidebar.span4.columns
        %p Sidebar goes here
      #content.span12.columns
        - if notice
          .alert-message.notice
            %a.close
            = notice
        -if alert
          .alert-message.notice
            %a.close
            .alert= alert
        = yield

    = debug(params) if Rails.env.development?
    = debug("current_user.id: #{current_user.id}") if Rails.env.development? && current_user


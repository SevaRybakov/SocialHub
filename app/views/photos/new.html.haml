- title "Uploading a photo to #{@album.name}"
= form_for [@album, @photo], :html => { :multipart => true } do |f|
  .clearfix
  = f.label :name
  .input
    = f.text_field :name, :class => 'xlarge'
  .clearfix
  = f.label 'Choose a photo'
  .input
    = f.file_field :image
  .actions= f.submit :class => 'btn primary'
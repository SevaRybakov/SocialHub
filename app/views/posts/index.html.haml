- title @user.name + " " + @user.surname
- if (current_user == @user)
  - subtitle "(It's you)"

- sidebar "Sidebar will be there"

= render :partial => "/posts/remote_form"

%div#posts
  = render :partial => "/posts/post", :collection => @posts

- if @posts.size >= 10
  %div{ :align => "center" }
    = link_to "...More...", user_posts_path(@user, :created_at => @posts.last.created_at), :remote => true, :id => "more_posts_link"


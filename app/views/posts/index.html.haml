- title @user.name + " " + @user.surname
- if (current_user == @user)
  - subtitle "(It's you)"

- sidebar "Sidebar will be there"

- form_for( [@user, Post.new], :remote => true ) do |form|
  .clearfix
    = form.text_area :content, :class => "xxlarge", :rows => 2
    = form.submit :class => "btn primary"

%div#posts
  = render :partial => "post", :collection => @posts


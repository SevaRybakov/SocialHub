
<%- if params[:status] == "older" %>

  $('#posts').append("<%= escape_javascript(render :partial => 'post', :collection => @posts) %>");
  $('#more_posts_link').attr("href", "<%=escape_javascript(user_posts_path(@user, :created_at => @posts.last.created_at, :status => "older"))%>");

  <%- if @posts.size < 10 %>
    $('#more_posts_link').hide();
  <%- end %>

<%- else %>

  $('#posts').prepend("<%= escape_javascript(render :partial => 'post', :collection => @posts) %>");
  <%- if @posts.size > 0 %>
    $(".post:first-child").css("background-color", "#F5F5F5");
  <%- end %>
<%- end %>


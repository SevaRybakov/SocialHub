%ul
  - if user_signed_in?
    %li= link_to friends_link_text, user_friends_path(current_user)
    %li= link_to "Photos", user_albums_path(current_user)
      
  - else
    %li= link_to 'Sign In', new_user_session_path
    %li= link_to 'Sign Up', new_user_registration_path

%form
  %input{ :type => 'text', :placeholder => 'Search...'}

%ul.nav.secondary-nav
  %li
    -if current_user
      = link_to 'Sign Out', destroy_user_session_path, :method => :delete, :confirm => "Sure?"


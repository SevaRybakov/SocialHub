%ul
  - if user_signed_in?
    %li
      %a 
        = "Friends"
        - unless current_user.friendship_requests.empty?
          = "( +#{current_user.friendship_requests.length.to_s} )"
    %li
      %a Photos( +10 )
  - else
    %li
      = link_to 'Sign In', new_user_session_path
    %li
      = link_to 'Sign Up', new_user_registration_path

%form
  %input{ :type => 'text', :placeholder => 'Search...'}

%ul.nav.secondary-nav
  %li
    -if current_user
      = link_to 'Sign Out', destroy_user_session_path, :method => :delete, :confirm => "Sure?"


%ul
  - if user_signed_in?
    %li
      %a#friends{ :href => user_friends_path(current_user)}
        = friends_link_text
    %li
      %a Photos( +10 )
  - else
    %li
      = link_to 'Sign In', new_user_session_path
    %li
      = link_to 'Sign Up', new_user_registration_path

%form
  %input{ :type => 'text', :placeholder => 'Search...'}

%ul.nav.secondary-nav
  %li
    -if current_user
      = link_to 'Sign Out', destroy_user_session_path, :method => :delete, :confirm => "Sure?"


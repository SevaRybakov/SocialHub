%img{ :src => '/images/kitty.jpg' }

.sidebar_links
  - if current_user.can_send_friendship_request_to? @user
    = link_to "Add friend", friendship_request_path(:friend_id => @user.id), :class => 'btn primary'

  -if current_user == @user
    = link_to "Edit Profile", edit_user_path(current_user), :class => 'btn primary'


- if @user.friends.length != 0
  .page-header
    %h3 Friends
  .friend-block
    - @user.friends.each do |fr|
      = link_to fr.full_name, user_path( fr )

